# MongoDB Configuration (REQUIRED)
MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net/
MONGODB_DB_NAME=insta_analyzer

# Server Configuration
PORT=3000

# Paytm Payment Gateway (REQUIRED)
PAYTM_MID=
PAYTM_MERCHANT_KEY=
# Must match Paytm Dashboard exactly: Test = WEBSTAGING, Production = your website name from dashboard
PAYTM_WEBSITE=WEBSTAGING
# STAGING or PRODUCTION
PAYTM_ENV=STAGING

# Instamojo Payment Gateway (REQUIRED on sensorahub.com)
INSTAMOJO_API_KEY=
INSTAMOJO_AUTH_TOKEN=
INSTAMOJO_SALT=
# Optional: override for sandbox (e.g. https://test.instamojo.com/api/1.1)
INSTAMOJO_API_BASE_URL=https://www.instamojo.com/api/1.1

# Base URL (frontend origin). Used for:
# - Paytm callback: BASE_URL/api/payment/paytm-callback
# - Instamojo redirect/webhook: derived from request Origin/Host (fallback = BASE_URL)
# - Post-purchase links: BASE_URL/post-purchase
# Local: http://localhost:5173   Production: https://samjhona.com or https://sensorahub.com
BASE_URL=http://localhost:5173