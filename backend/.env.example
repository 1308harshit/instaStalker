# MongoDB Configuration (REQUIRED)
MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net/
MONGODB_DB_NAME=insta_analyzer

# Server Configuration
PORT=3000

# Paytm Payment Gateway (REQUIRED)
PAYTM_MID=
PAYTM_MERCHANT_KEY=
# Must match Paytm Dashboard exactly: Test = WEBSTAGING, Production = your website name from dashboard
PAYTM_WEBSITE=WEBSTAGING
# STAGING or PRODUCTION
PAYTM_ENV=STAGING

# Base URL for Paytm callback and emails. Must be the URL of THIS backend that Paytm can reach.
# Local: use ngrok (e.g. https://abc123.ngrok.io) or deploy; Production: https://samjhona.com
BASE_URL=https://samjhona.com